@using MVCTemplate.Models   @* <-- Replace with the namespace where ApplicationUser is *@
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@using Microsoft.AspNetCore.Identity
<div class="app-container app-theme-white body-tabs-shadow fixed-header fixed-sidebar">
    <div class="app-header header-shadow bg-heavy-rain">
        <div class="app-header__logo">
            <div class="pt-2">

                @* Website Icon/Logo Here *@
                <img src="~/LogosIcons/logo.png" width="75rem" alt="">
            </div>
            <div class="header__pane ms-auto">
                <div>
                    <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <div class="app-header__mobile-menu">
            <div>
                <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
        <div class="app-header__menu">
            <span>
                <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                    <span class="btn-icon-wrapper">
                        <i class="fa fa-ellipsis-v fa-w-6"></i>
                    </span>
                </button>
            </span>
        </div>
        <div class="app-header__content">
            <div class="app-header-left">
            </div>
            <div class="app-header-right">
                <div class="header-dots">

                    <div class="dropdown">

                        <div tabindex="-1" role="menu" aria-hidden="true"
                             class="dropdown-menu-xl rm-pointers dropdown-menu dropdown-menu-right">
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab-messages-header" role="tabpanel">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container">
                                            <div class="p-3">
                                                <div class="notifications-box">
                                                    <div class="vertical-time-simple vertical-without-time vertical-timeline vertical-timeline--one-column">
                                                        <div class="vertical-timeline-item dot-danger vertical-timeline-element">
                                                            <div>
                                                                <span class="vertical-timeline-element-icon bounce-in"></span>
                                                                <div class="vertical-timeline-element-content bounce-in">
                                                                    <h4 class="timeline-title">All Hands Meeting</h4>
                                                                    <span class="vertical-timeline-element-date"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="vertical-timeline-item dot-warning vertical-timeline-element">
                                                            <div>
                                                                <span class="vertical-timeline-element-icon bounce-in"></span>
                                                                <div class="vertical-timeline-element-content bounce-in">
                                                                    <p>
                                                                        Yet another one, at
                                                                        <span class="text-success">15:00 PM</span>
                                                                    </p>
                                                                    <span class="vertical-timeline-element-date"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="vertical-timeline-item dot-success vertical-timeline-element">
                                                            <div>
                                                                <span class="vertical-timeline-element-icon bounce-in"></span>
                                                                <div class="vertical-timeline-element-content bounce-in">
                                                                    <h4 class="timeline-title">
                                                                        Build the production release
                                                                        <span class="badge bg-danger ms-2">NEW</span>
                                                                    </h4>
                                                                    <span class="vertical-timeline-element-date"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="header-btn-lg pe-0">
                    <div class="widget-content p-0">
                        <div class="widget-content-wrapper">
                            <div class="widget-content-left">
                                <div class="btn-group">
                                    <a data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                             <img width="42" class="rounded-circle" src="~/asset/images/avatar.png" alt="">
                                        <i class="fa fa-angle-down ms-2 opacity-8"></i>
                                    </a>
                                    <div tabindex="-1" role="menu" aria-hidden="true"
                                         class="rm-pointers dropdown-menu-lg dropdown-menu dropdown-menu-right">
                                        <div class="dropdown-menu-header">
                                            <div class="dropdown-menu-header-inner bg-info">
                                                <div class="menu-header-image opacity-2"></div>
                                                <div class="menu-header-content text-start">
                                                    <div class="widget-content p-0">
                                                        <div class="widget-content-wrapper">



                                                            <div class="widget-content-left me-3">
                                                                @*Handle code for which image to display on header*@
                                                                <img width="42" class="rounded-circle" src="~/asset/images/avatar.png" alt="">
                                                            </div>
                                                            <div class="widget-content-left">
                                                                <div class="widget-heading">
                                                                    @* Handle code for what name to display *@
                                                                   <span>
                                                                       Fname LName
                                                                   </span> 
                                                                </div>
                                                                <div class="widget-subheading opacity-8">
                                                                    @* Handle code for what subheading for user (optional) *@
                                                                    <span>
                                                                        User Subheading
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="widget-content-right me-2">
                                                                <form id="logoutForms" asp-area="Identity" asp-page="/Account/Logout">
                                                                    <a class="btn-pill btn-shadow btn-shine btn btn-focus" href="javascript:{}" onclick="document.getElementById('logoutForms').submit();">
                                                                        Logout
                                                                    </a>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @* Increase height when adding one more item, up to three nav-item should be visible, after that, it's okay to scroll *@
                                        <div class="scroll-area-xs" style="height: auto;">
                                            <div class="scrollbar-container ps">
                                                <ul class="nav flex-column">
                                                    <li class="nav-item-header nav-item">Activity</li>

                                                    @* Code to handle activity  *@
                                                    @* @if (SignInManager.IsSignedIn(User))
                                                    {
                                                        var user = await UserManager.GetUserAsync(User);
                                                        if (user?.Employee != null)
                                                        {
                                                            <li class="nav-item">
                                                                <a asp-area="Staff" asp-controller="Profile" asp-action="Index" class="nav-link">Profile</a>
                                                            </li>
                                                        }
                                                    } *@
                                                    <li class="nav-item">
                                                        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="nav-link">Change Password</a>
                                                    </li>

                                                </ul>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="widget-content-left  ms-3 header-user-info">
                                <div class="widget-heading">

                                    @* Code to handle display name  *@
                                   @*  @if (SignInManager.IsSignedIn(User))
                                    {
                                        var user = await UserManager.GetUserAsync(User);
                                        if (user != null)
                                        {
                                            <span>
                                                @user.Employee?.FirstName @user.Employee?.LastName
                                            </span>
                                        }
                                    } *@
                                    <span>
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            var user = await UserManager.GetUserAsync(User);
                                            if (user != null)
                                            {
                                                <span>@user.Email</span>
                                            }
                                        }
                                    </span>
                                </div>
                                <div class="widget-subheading">
                                    @*Code to handle subheading for users (again, optional)*@
                                    @* @if (SignInManager.IsSignedIn(User))
                                    {
                                        var user = await UserManager.GetUserAsync(User);
                                        if (user != null)
                                        {
                                            <span>
                                                @user.Employee?.Position.Name
                                            </span>
                                        }
                                    } *@
                                    <span>
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            var user = await UserManager.GetUserAsync(User);
                                            if (user != null)
                                            {
                                                var roles = await UserManager.GetRolesAsync(user);
                                                if (roles.Any())
                                                {
                                                    <span>@roles.First()</span>
                                                }
                                            }
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
