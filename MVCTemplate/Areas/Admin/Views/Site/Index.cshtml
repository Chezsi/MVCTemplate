@model MVCTemplate.ViewModels.SiteVM
@{
    ViewData["Title"] = "Site";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="logoOverlay">
    <img src="~/LogosIcons/logo.png" alt="Logo" />
</div>

<div class="app-main__inner" style="opacity: 0;">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="lnr-map icon-gradient bg-plum-plate"></i>
                </div>
                <div>
                    <span class="text-primary">
                        <svg viewBox="0 0 240 40" width="240" height="40" xmlns="http://www.w3.org/2000/svg">
                            <text x="0" y="30" font-family="Arial, sans-serif" font-size="32" fill="none" stroke="#007bff" stroke-width="1.5" stroke-linejoin="round">
                                Sites
                            </text>
                        </svg>
                    </span>
                </div>
            </div>
            <div class="page-title-actions staggered">
                <button class="btn btn-primary btn-shadow mx-2" data-bs-toggle="modal" data-bs-target="#createModal">+ Add Site</button>
            </div>
        </div>
    </div>

    <div class="main-card mb-3 card staggered">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered" id="siteTable">
                    <thead>
                        <tr>
                            <th>Branch</th>
                            <th>Location</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Modal {
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form asp-area="Admin" asp-controller="Site" asp-action="Create" method="post">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="createModalLabel">Add Site</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="NewSite.Branch" class="form-label">
                                @Html.DisplayNameFor(m => m.NewSite.Branch)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NewSite.Branch" class="form-control" />
                            <span asp-validation-for="NewSite.Branch" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewSite.Location" class="form-label">
                                @Html.DisplayNameFor(m => m.NewSite.Location)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="NewSite.Location" class="form-control" type="text" />
                            <span asp-validation-for="NewSite.Location" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form id="editForm" method="post">
                <div class="modal-content">
                    <div class="modal-header bg-warning text-white">
                        <h5 class="modal-title" id="editModalLabel">Edit Site</h5>
                        <button type="button" class="btn-close text-white" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" name="Id" id="editId" />
                        <div class="mb-3">
                            <label for="editBranch" class="form-label">Branch <span class="text-danger">*</span></label>
                            <input type="text" name="Branch" id="editBranch" class="form-control" required />
                            <div class="text-danger field-validation-valid" data-valmsg-for="Branch"></div>
                        </div>
                        <div class="mb-3">
                            <label for="editLocation" class="form-label">Location <span class="text-danger">*</span></label>
                            <input type="text" name="Location" id="editLocation" class="form-control" required />
                            <div class="text-danger field-validation-valid" data-valmsg-for="Location"></div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-warning">Update</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

}


@section Styles {
    <link rel="stylesheet" href="~/css/logoOverlay.css" />
    <link rel="stylesheet" href="~/css/search-hover.css" />
    <link rel="stylesheet" href="~/css/download-morph.css" />
    <link rel="stylesheet" href="~/css/button-hover.css" />
}

@section Scripts {

    <script src="~/js/validation.js"></script>
    <script src="~/js/formSubmissionAjax.js"></script>
    <script src="~/js/deleteGeneralSettings.js"></script>
    <script src="~/js/fadeEffect.js"></script>
    <script src="~/js/download-morph.js"></script>

    <script>
        window.addEventListener('load', function () {
            document.querySelector('.app-main__inner').style.opacity = 1;
            const logoOverlay = document.getElementById('logoOverlay');
            if (logoOverlay) logoOverlay.style.display = 'none';
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#siteTable').DataTable({
                ajax: {
                    url: '/Admin/Site/GetAllSites',
                    type: 'GET',
                    dataType: 'json',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'branch' },
                    { data: 'location' },
                    { data: 'createdAt' },
                    { data: 'updatedAt' },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return `
                                <button class="btn btn-warning btn-sm btn-edit"
                                    data-id="${row.id}"
                                    data-branch="${row.branch}"
                                    data-location="${row.location}">
                                    Edit
                                </button>
                                <button class="btn btn-danger btn-sm" onclick="Delete('/Admin/Site/Delete/${row.id}')">Delete</button>
                            `;
                        },
                        orderable: false
                    }
                ],
                language: {
                    emptyTable: 'No sites found.'
                },
                width: '100%'
            });

            // Event delegation for dynamically loaded buttons
            $('#siteTable').on('click', '.btn-edit', function () {
                const id = $(this).data('id');
                const button = $(this);
                $('#editId').val(button.data('id'));
                $('#editBranch').val(button.data('branch'));
                $('#editLocation').val(button.data('location'));
                $('#editModal').modal('show');
            });

            $('#siteTable').on('click', '.btn-delete', function () {
                const id = $(this).data('id');
                $.get(`/Admin/Site/Delete/${id}`, function (html) {
                    $('#siteModalPlaceholder').html(html);
                    $('#siteModal').modal('show');
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#createModal form').on('submit', function (e) {
                e.preventDefault(); // prevent default form submit
                var form = $(this);

                $.ajax({
                    type: 'POST',
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message);
                            $('#createModal').modal('hide');

                            // Optionally refresh the DataTable
                            $('#siteTable').DataTable().ajax.reload();
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function () {
                        toastr.error("An unexpected error occurred.");
                    }
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            // EDIT BUTTON CLICK
            $('#siteTable').on('click', '.btn-edit', function () {
                const id = $(this).data('id');

                $.get(`/Admin/Site/Get/${id}`, function (site) {
                    $('#editId').val(site.id);
                    $('#editBranch').val(site.branch);
                    $('#editLocation').val(site.location);
                    $('#editModal').modal('show');
                });
            });

            // EDIT FORM SUBMIT (AJAX)
            $('#editForm').on('submit', function (e) {
                e.preventDefault();

                const data = {
                    Id: $('#editId').val(),
                    Branch: $('#editBranch').val(),
                    Location: $('#editLocation').val()
                };

                $.ajax({
                    url: '/Admin/Site/Edit',
                    type: 'POST',
                    data: data,
                    success: function (res) {
                        if (res.success) {
                            toastr.success(res.message);
                            $('#editModal').modal('hide');
                            $('#siteTable').DataTable().ajax.reload();
                        } else {
                            toastr.error(res.message || "Failed to update site.");
                        }
                    },
                    error: function (xhr) {
                        toastr.error(xhr.responseJSON?.message || "An error occurred.");
                    }
                });
            });
        });
    </script>
}

