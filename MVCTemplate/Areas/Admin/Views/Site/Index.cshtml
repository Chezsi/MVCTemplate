@model MVCTemplate.ViewModels.SiteVM
@{
    ViewData["Title"] = "Site";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="logoOverlay">
    <img src="~/LogosIcons/logo.png" alt="Logo" />
</div>

<div class="app-main__inner" style="opacity: 0;">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="lnr-map icon-gradient bg-plum-plate"></i>
                </div>
                <div>
                    <span class="text-primary">
                        <svg viewBox="0 0 240 40" width="240" height="40" xmlns="http://www.w3.org/2000/svg">
                            <text x="0" y="30" font-family="Arial, sans-serif" font-size="32" fill="none" stroke="#007bff" stroke-width="1.5" stroke-linejoin="round">
                                Sites
                            </text>
                        </svg>
                    </span>
                </div>
            </div>
            <div class="page-title-actions staggered">
                <button class="btn btn-primary btn-shadow mx-2" data-bs-toggle="modal" data-bs-target="#createModal">+ Add Site</button>
            </div>
        </div>
    </div>

    <div class="main-card mb-3 card staggered">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered" id="siteTable">
                    <thead>
                        <tr>
                            <th>Branch</th>
                            <th>Location</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Modal {
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form asp-area="Admin" asp-controller="Site" asp-action="Create" method="post">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="createModalLabel">Add Site</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="NewSite.Branch" class="form-label"></label>
                            <input asp-for="NewSite.Branch" class="form-control" />
                            <span asp-validation-for="NewSite.Branch" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewSite.Location" class="form-label"></label>
                            <input asp-for="NewSite.Location" class="form-control" type="text" />
                            <span asp-validation-for="NewSite.Location" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

}


@section Styles {
    <link rel="stylesheet" href="~/css/logoOverlay.css" />
    <link rel="stylesheet" href="~/css/search-hover.css" />
    <link rel="stylesheet" href="~/css/download-morph.css" />
    <link rel="stylesheet" href="~/css/button-hover.css" />
}

@section Scripts {

    <script src="~/js/validation.js"></script>
    <script src="~/js/formSubmissionAjax.js"></script>
    <script src="~/js/deleteGeneralSettings.js"></script>
    <script src="~/js/fadeEffect.js"></script>
    <script src="~/js/download-morph.js"></script>

    <script>
        window.addEventListener('load', function () {
            document.querySelector('.app-main__inner').style.opacity = 1;
            const logoOverlay = document.getElementById('logoOverlay');
            if (logoOverlay) logoOverlay.style.display = 'none';
        });

        $(document).ready(function () {

            // Edit
            $('.btn-edit').on('click', function () {
                const id = $(this).data('id');
                $.get(`/Admin/Site/Edit/${id}`, function (html) {
                    $('#siteModalPlaceholder').html(html);
                    $('#siteModal').modal('show');
                });
            });

            // Delete
            $('.btn-delete').on('click', function () {
                const id = $(this).data('id');
                $.get(`/Admin/Site/Delete/${id}`, function (html) {
                    $('#siteModalPlaceholder').html(html);
                    $('#siteModal').modal('show');
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#siteTable').DataTable({
                ajax: {
                    url: '/Admin/Site/GetAllSites',
                    type: 'GET',
                    dataType: 'json',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'branch' },
                    { data: 'location' },
                    { data: 'createdAt' },
                    { data: 'updatedAt' },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return `
                                    <button class="btn btn-warning btn-sm btn-edit" data-id="${row.id}">Edit</button>
                                    <button class="btn btn-danger btn-sm btn-delete" data-id="${row.id}">Delete</button>
                                `;
                        },
                        orderable: false
                    }
                ],
                language: {
                    emptyTable: 'No sites found.'
                },
                width: '100%'
            });

            // Event delegation for dynamically loaded buttons
            $('#siteTable').on('click', '.btn-edit', function () {
                const id = $(this).data('id');
                $.get(`/Admin/Site/Edit/${id}`, function (html) {
                    $('#siteModalPlaceholder').html(html);
                    $('#siteModal').modal('show');
                });
            });

            $('#siteTable').on('click', '.btn-delete', function () {
                const id = $(this).data('id');
                $.get(`/Admin/Site/Delete/${id}`, function (html) {
                    $('#siteModalPlaceholder').html(html);
                    $('#siteModal').modal('show');
                });
            });
        });
    </script>

}

