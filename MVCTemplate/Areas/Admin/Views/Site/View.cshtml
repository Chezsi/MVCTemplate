@model MVCTemplate.ViewModels.SiteDetailVM

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Logo Overlay -->
<div id="logoOverlay">
    <img src="~/LogosIcons/logo.png" alt="Logo" />
</div>

<!-- Page Wrapper -->
<div class="app-main__inner" style="opacity: 0;">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="lnr-map icon-gradient bg-info"></i>
                </div>
                <div>
                    <span class="text-primary fs-3 fw-bold">Site Details</span>
                </div>
            </div>
            <div class="page-title-actions">
                <a href="/Admin/Site" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Site Info Card -->
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h4 class="mb-3 text-info">Branch: @Model.Branch</h4>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
            <p><strong>Updated:</strong> @(Model.UpdatedAt.ToString("MMMM dd, yyyy") == "January 01, 0001" ? "" : Model.UpdatedAt.ToString("MMMM dd, yyyy"))</p>
        </div>
    </div>

    <!-- Managers Table Card -->
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="mb-3">Managers Assigned to @Model.Branch</h5>
            <div class="table-responsive">
                <table id="siteManagersTable" class="table table-striped table-bordered display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var manager in Model.Managers)
                        {
                            <tr>
                                <td>@manager.Name</td>
                                <td>@manager.Email</td>
                                <td>@manager.CreatedAt.ToString("MMMM dd, yyyy")</td>
                                <td>@(manager.UpdatedAt?.ToString("MMMM dd, yyyy") == "January 01, 0001" ? "" : manager.UpdatedAt?.ToString("MMMM dd, yyyy"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
@section Styles {
    <link rel="stylesheet" href="~/css/logoOverlay.css" />
    <link rel="stylesheet" href="~/css/search-hover.css" />
    <link rel="stylesheet" href="~/css/download-morph.css" />
    <link rel="stylesheet" href="~/css/button-hover.css" />
}

<!-- Scripts -->
@section Scripts {
    <script src="~/js/validation.js"></script>
    <script src="~/js/formSubmissionAjax.js"></script>
    <script src="~/js/deleteGeneralSettings.js"></script>
    <script src="~/js/fadeEffect.js"></script>
    <script src="~/js/download-morph.js"></script>
    <script src="~/js/SiteScripts/siteview-data-table.js"></script>
}
