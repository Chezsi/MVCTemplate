@model IEnumerable<MVCTemplate.Models.Checklist>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<div class="card bg-light border-0 light-mode elevation-4 animate__animated animate__fadeIn animate__faster" style="width:100%; margin:40px 5px 5px 5px; border-radius:5px;">
    <div class="card-header border-2 elevation-2" style="margin:5px; border-radius:5px;">
        <div class="row text-center">
            <div class="col">
                <h2 class="m-0">Checklist</h2>
            </div>
        </div>
    </div>

    <div class="p-3">
        <div class="row mb-1">
            <div class="card-header card-header-tab-animation mb-2">
                <ul class="nav nav-tabs nav-justified">
                    <li class="nav-item">
                        <a href="javascript:void(0);" id="filterActive" class="nav-link active">ACTIVE</a>
                    </li>
                    <li class="nav-item">
                        <a href="javascript:void(0);" id="filterDisabled" class="nav-link">DISABLED</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row mx-3">
        <div class="col-md-3">
            <select id="categoryFilter" class="form-select">
                <option value="">-- All Categories --</option>
            </select>
        </div>
    </div>


    <div class="row mr-2">
        <div class="col d-flex justify-content-end">
            <button type="button" id="openModalBtn" class="btn btn-primary"
                    data-bs-toggle="modal" data-bs-target="#addChecklistModal">
                Add New
            </button>
        </div>
    </div>

    <div class="row m-2">
        <div class="col-lg-12 border-2 m-2">
            <div class="table-responsive">
                <table id="checklistTable" class="table table-bordered table-hover w-100">
                    <thead>
                        <tr>
                            <th style="display:none;">Id</th> <!-- hidden column -->
                            <th>Name</th>
                            <th>Category</th>
                            <th class="description-col">Description</th>
                            <th>Status</th>
                            <th class="text-center no-export">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none;">@item.Id</td> <!-- hidden value -->
                                <td>@item.Name</td>
                                <td>@item.Category</td>
                                <td class="description-cell description-col" style="cursor:pointer;">
                                    <span class="forrole-text">
                                        @item.ForRole
                                    </span>
                                </td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </td>
                                <td class="text-center no-export">
                                    <div class="d-flex justify-content-center gap-2">

                                        <button type="button" class="btn btn-sm btn-info editBtn"
                                                data-id="@item.Id"
                                                data-name="@item.Name"
                                                data-category="@item.Category"
                                                data-forrole="@item.ForRole">
                                            Edit
                                        </button>

                                        @if (item.Status)
                                        {
                                            <form asp-action="Disable" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning">Disable</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Restore" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-success">Restore</button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

@section Modal{
<!-- Add Checklist Modal -->
<div class="modal fade" id="addChecklistModal" tabindex="-1" aria-labelledby="addChecklistModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addChecklistModalLabel">Add New Checklist Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createChecklistForm" asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="checklistName" class="form-label">Name</label>
                        <input type="text" name="name" id="checklistName" class="form-control" placeholder="Enter checklist item" required />
                    </div>
                    <select name="category" id="checklistCategory" class="form-select" required>
                        <option value="">-- Select Category --</option>
                        <option value="DISPENSING_PUMP">DISPENSING_PUMP</option>
                        <option value="ELECTRICAL/FIXTURES">ELECTRICAL/FIXTURES</option>
                        <option value="CIVIL/STRUCTURAL/UTILITIES">CIVIL/STRUCTURAL/UTILITIES</option>
                        <option value="SAFETY">SAFETY</option>
                        <option value="SIGNAGES">SIGNAGES</option>
                        <option value="MECHANICAL">MECHANICAL</option>
                        <option value="FORECOURT_MATERIALS">FORECOURT_MATERIALS</option>
                        <option value="KAE">KAE</option>
                    </select>
                    <label for="checklistForRole" class="form-label">Description</label>
                    <input type="text" name="forRole" id="checklistForRole" class="form-control" placeholder="Enter description" required />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Checklist Modal -->
<div class="modal fade" id="editChecklistModal" tabindex="-1" aria-labelledby="editChecklistModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editChecklistModalLabel">Edit Checklist Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editChecklistForm" asp-action="Edit" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" id="editChecklistId" />

                    <div class="mb-3">
                        <label for="editChecklistName" class="form-label">Name</label>
                        <input type="text" name="name" id="editChecklistName" class="form-control" required />
                    </div>

                    <label for="editChecklistCategory" class="form-label">Category</label>
                    <select name="category" id="editChecklistCategory" class="form-select" required>
                        <option value="">-- Select Category --</option>
                        <option value="DISPENSING_PUMP">DISPENSING_PUMP</option>
                        <option value="ELECTRICAL/FIXTURES">ELECTRICAL/FIXTURES</option>
                        <option value="CIVIL/STRUCTURAL/UTILITIES">CIVIL/STRUCTURAL/UTILITIES</option>
                        <option value="SAFETY">SAFETY</option>
                        <option value="SIGNAGES">SIGNAGES</option>
                        <option value="MECHANICAL">MECHANICAL</option>
                        <option value="FORECOURT_MATERIALS">FORECOURT_MATERIALS</option>
                        <option value="KAE">KAE</option>
                    </select>

                    <label for="editChecklistForRole" class="form-label">Description</label>
                    <input type="text" name="forRole" id="editChecklistForRole" class="form-control" required />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
}

@section Styles {
    <link rel="stylesheet" href="~/css/logoOverlay.css" />
    <link rel="stylesheet" href="~/css/download-morph.css" />
    <link rel="stylesheet" href="~/css/button-hover.css" />


    <style>
        .description-col {
            width: 200px !important; /* enforce fixed width */
            max-width: 200px !important; /* prevent expansion */
            white-space: nowrap; /* no wrapping */
            overflow: hidden; /* hide overflow */
            text-overflow: ellipsis; /* show ... when overflow */
        }
    </style>
}

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/GenerateScripts/generate-graph-pdf.js"></script>
<script src="~/js/GenerateScripts/generate-export.js"></script>
<script src="~/js/fadeEffect.js"></script>
<script src="~/js/download-morph.js"></script>

<script>
    $(document).ready(function () {
        var table = $('#checklistTable').DataTable({
            dom: 'lfrtip',
            language: { infoFiltered: "" },
            lengthMenu: [[-1, 10, 25, 50, 100], ["All", 10, 25, 50, 100]],
            pageLength: -1,
            autoWidth: false,
            columnDefs: [
                { targets: 0, visible: false, searchable: false },
                {
                    targets: 3,               // Description column
                    width: "200px",
                    className: "description-col"
                }
            ],
            order: [[0, "asc"]]
        });

        // By default, show only Active
        table.column(4).search("^Active$", true, false).draw();
        setActiveButton($('#filterActive'));

        $('#filterActive').on('click', function () {
            table.column(4).search("^Active$", true, false).draw();
            setActiveButton(this);
        });

        $('#filterDisabled').on('click', function () {
            table.column(4).search("^Disabled$", true, false).draw();
            setActiveButton(this);
        });

        // updated for nav-link style
        function setActiveButton(btn) {
            $('.nav-link').removeClass('active');
            $(btn).addClass('active');
        }

        //  Populate category filter dynamically from table data
        var categoryColumn = table.column(2); // Category column inde
        var uniqueCategories = categoryColumn.data().unique().sort();

        uniqueCategories.each(function (d) {
            $('#categoryFilter').append('<option value="' + d + '">' + d + '</option>');
        });

        //  Apply filter when dropdown changes
        $('#categoryFilter').on('change', function () {
            var val = $.fn.dataTable.util.escapeRegex($(this).val());
            categoryColumn.search(val ? '^' + val + '$' : '', true, false).draw();
        });

        // SweetAlert confirmation
        $('form').on('submit', function (e) {
            const button = $(this).find('button');
            if (button.text().toLowerCase().includes('disable')) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will disable the checklist item.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, disable it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        e.target.submit();
                    }
                });
            }
        });
    });

    $("#createChecklistForm").on("submit", function (e) {
        e.preventDefault();

        $.ajax({
            url: '@Url.Action("Create", "Checklist")',
            type: "POST",
            data: $(this).serialize(),
            success: function (response) {
                if (response.success) {
                    toastr.success(response.message);

                    // Close modal
                    $("#addChecklistModal").modal("hide");

                    // Reload page OR refresh DataTable (if you want without reload)
                    location.reload();
                } else {
                    toastr.error(response.message);
                }
            },
            error: function () {
                toastr.error("Something went wrong. Please try again.");
            }
        });
    });

    // Open Edit modal & populate fields
    $('#checklistTable').on('click', '.editBtn', function () {
        const id = $(this).data('id');
        const name = $(this).data('name');
        const category = $(this).data('category');
        const forRole = $(this).data('forrole');

        $('#editChecklistId').val(id);
        $('#editChecklistName').val(name);
        $('#editChecklistCategory').val(category);
        $('#editChecklistForRole').val(forRole);

        $('#editChecklistModal').modal('show');
    });

    // Handle Edit form submit
    $("#editChecklistForm").on("submit", function (e) {
        e.preventDefault();

        $.ajax({
            url: '@Url.Action("Edit", "Checklist")',
            type: "POST",
            data: $(this).serialize(),
            success: function (response) {
                if (response.success) {
                    toastr.success(response.message);

                    $("#editChecklistModal").modal("hide");
                    location.reload();
                } else {
                    toastr.error(response.message);
                }
            },
            error: function () {
                toastr.error("Something went wrong. Please try again.");
            }
        });
    });

    // When clicking the whole description cell, show SweetAlert
    $('#checklistTable').on('click', 'td.description-cell', function () {
        const description = $(this).find('.forrole-text').text().trim();

        Swal.fire({
            title: 'Description',
            text: description,
            icon: 'info',
            confirmButtonText: 'OK'
        });
    });
</script>
}