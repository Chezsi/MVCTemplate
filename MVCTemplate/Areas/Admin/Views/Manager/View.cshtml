@model MVCTemplate.ViewModels.ManagerDetailVM

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="logoOverlay">
    <img src="~/LogosIcons/logo.png" alt="Logo" />
</div>

<div class="app-main__inner" style="opacity: 0;">
    <div class="card">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center rounded-top">
            <div class="d-flex align-items-center mb-4 mt-4 mr-4 ml-4">
                <div class="me-3">
                    <i class="fas fa-user fs-3"></i>
                </div>
                <div>
                    <h4 class="mb-0 fw-bold">Details</h4>
                    <small>Manager: @Model.Name</small>
                </div>
            </div>
            <div>
                <a href="/Admin/Manager" class="btn btn-light text-dark">Back to List</a>
            </div>
        </div>

        <div class="card-body">
            <div class="mb-4">
                <h5 class="text-black fw-bold">Information:</h5>
                <hr />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-control" value="@Model.Email" disabled />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Branch</label>
                        <input type="text" class="form-control" value="@Model.Branch" disabled />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Location</label>
                        <input type="text" class="form-control" value="@Model.Location" disabled />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Created</label>
                        <input type="text" class="form-control" value="@Model.CreatedAt.ToString("MMMM dd, yyyy")" disabled />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Updated</label>
                        <input type="text" class="form-control" value="@(Model.UpdatedAt?.ToString("MMMM dd, yyyy") == "January 01, 0001" ? "" : Model.UpdatedAt?.ToString("MMMM dd, yyyy"))" disabled />
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-black fw-bold mb-0">Products Managed:</h5>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addProductModal">
                    + Add Product
                </button>
            </div>
            <hr />

            <div>
                <div class="table-responsive">
                    <table id="managerProductsTable" class="table table-striped table-bordered display nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Branch</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Modal{
    <div class="modal fade" id="addProductModal" tabindex="-1">
        <div class="modal-dialog">
            <form id="addProductForm">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">Add Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="Product.ManagerId" value="@Model.ManagerId" />
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" name="Product.Name" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="Product.Description" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Quantity</label>
                            <input type="number" name="Product.Quantity" class="form-control" required min="1" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Add Product</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="modal fade" id="editProductModal" tabindex="-1">
        <div class="modal-dialog">
            <form id="editProductForm">
                <div class="modal-content">
                    <div class="modal-header bg-warning text-white">
                        <h5 class="modal-title">Edit Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="Product.Id" id="editProductId" />
                        <input type="hidden" name="Product.ManagerId" value="@Model.ManagerId" />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" name="Product.Name" id="editProductName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <input type="text" name="Product.Description" id="editProductDescription" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Quantity</label>
                            <input type="number" name="Product.Quantity" id="editProductQuantity" class="form-control" required />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-warning">Update</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

}

@section Styles {
    <link rel="stylesheet" href="~/css/logoOverlay.css" />
    <link rel="stylesheet" href="~/css/search-hover.css" />
    <link rel="stylesheet" href="~/css/download-morph.css" />
    <link rel="stylesheet" href="~/css/button-hover.css" />
}

@section Scripts {
    <script src="~/js/validation.js"></script>
    <script src="~/js/formSubmissionAjax.js"></script>
    <script src="~/js/deleteGeneralSettings.js"></script>
    <script src="~/js/fadeEffect.js"></script>
    <script src="~/js/download-morph.js"></script>
    <script src="~/js/ManagerScripts/managerview-data-table.js"></script>
    <script src="~/js/ManagerScripts/manager-crud.js"></script>
}
