@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container">
    <!-- Top Header -->
    <h1 class="text-center" style="font-size: 36px; padding-bottom: 20px;">Manage your account</h1>

    <!-- Change Account Settings Section -->
    <div>
        <h2 class="text-center" style="font-size: 28px; padding-bottom: 20px;">Change your account settings</h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}
